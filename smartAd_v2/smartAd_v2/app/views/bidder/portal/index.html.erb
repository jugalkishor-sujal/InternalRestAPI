                          </div>
                          <div class="btn-group">
                            <button type="button" class="btn btn-default">Medium</button>
                          </div>
                          <div class="btn-group">
                            <button type="button" class="btn btn-default">Short</button>
                          </div>
                        </div>
                    </div>
                    </div>
                    
                   <div class="col-lg-4">
                    <div class=" fltrtypbx extraopt" align="center">
                    	<div class="btn-group btn-group-justified">
                          <div class="btn-group">
                            <button type="button" class="btn btn-default">Preimum</button>
                          </div>
                          <div class="btn-group">
                            <button type="button" class="btn btn-default">Normal</button>
                          </div>
                          <div class="btn-group">
                            <button type="button" class="btn btn-default">Economy</button>
                          </div>
                        </div>
                    </div>
                    </div>
                    
                   <div class="col-lg-4">
                    <div class=" fltrtypbx extraopt" align="center">
                    	<div class="btn-group btn-group-justified">
                          <div class="btn-group">
                            <button type="button" class="btn btn-default">Preimum</button>
                          </div>
                          <div class="btn-group">
                            <button type="button" class="btn btn-default">Normal</button>
                          </div>
                          <div class="btn-group">
                            <button type="button" class="btn btn-default">Economy</button>
                          </div>
                        </div>
                    </div>
                    </div>
                	 
                </div>
                </div>
                </div>
                <!-- Duration, Locatio and Time Slot Starts Ends -->
                
                
                
                </div>
                </div>
            </div>
        </div>
   </div>
   <!-- Main Filters Section Ends -->
   
   <!-- Sorting Filters Starts -->
   <div class="sortbar">
    <div class="row">
    	<div class="col-lg-8 col-xs-push-2" align="center">
        <ul>
        	<li>
            <a class="sortingarrow " href="#"></a>&nbsp;<a class="sortingarrow  arrowup"   href="#"></a>
            </li>
            <li>&nbsp;</li>
            <li>Sort By:</li>
            <li><label><input  name="" type="radio"  value=""> 
            <span class="radioimg1"></span> Bid Amount</label>
            </li>
            <li>&nbsp;</li>
            <li><label><input  name="" type="radio"  value=""> 
            <span class="radioimg1"></span> Date</label>
            </li>
            <li>&nbsp;</li>
            <li><label><input  name="" type="radio"  value=""> 
            <span class="radioimg1"></span> No of Spots</label>
            </li>
            <li>&nbsp;</li>
            <li><label><input  name="" type="radio"  value=""> 
            <span class="radioimg1"></span> Time Share</label>
            </li>
            <li>&nbsp;</li>
            <li><label><input  name="" type="radio"  value=""> 
            <span class="radioimg1"></span> Duration</label>
            </li>
        </ul>
        </div>
    </div>
   </div>
   <!-- Sorting Filters Ends -->
   <% end %>
   <!-- Biding Content Starts -->
   <div class="container">
   <div class="row">
   		<div id="products" class="bidcont">
			<% if flash[:error]%>
			<div class="alert alert-danger fade in">
			      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
			      <h4><%= flash[:error]%></h4>
			</div>
			<% end %>
			
			<% if flash[:notice]%>
			<div class="alert alert-success fade in">
			      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
			      <h4><%= flash[:notice]%></h4>
			</div>
			<% end %>
        	<%= render 'ads' %>
        </div>
   </div>
   </div>
   <!-- Bidding Content Ends -->
   
   
   <script>
   $(function() {
     
     $("#products_search input").keyup(function() {
       $.get($("#products_search").attr("action"), $("#products_search").serialize(), null, "script");
       return false;
     });
	 
	 // spot
	 $("#fixed_display_spot").click(function () {
		 if ($('input[name=fixed_product_type]').val() != "on")
		 {
			 $('input[name=fixed_product_type]').val("on");
			 $('#img_fixed_display_spot').attr('src', '/frontend/img/optmark-chk.png');
		 }else
		 {
			 $('input[name=fixed_product_type]').val("off");
			 $('#img_fixed_display_spot').attr('src', '/frontend/img/optmark.png');
         
		 }
		 $.get($("#products_search").attr("action"), $("#products_search").serialize(), null, "script");
         return false;
	 });

	 $("#video_spot").click(function () {
		 if ($('input[name=video_product_type]').val() != "on")
		 {
			 $('input[name=video_product_type]').val("on");
			 $('#img_video_spot').attr('src', '/frontend/img/optmark-chk.png');
		 }else
		 {
			 $('input[name=video_product_type]').val("off");
			 $('#img_video_spot').attr('src', '/frontend/img/optmark.png');
         
		 }
         $.get($("#products_search").attr("action"), $("#products_search").serialize(), null, "script");
         return false;
	 });

	 $("#kiosk_banner_spot").click(function () {
		 if ($('input[name=kiosk_product_type]').val() != "on")
		 {
			 $('input[name=kiosk_product_type]').val("on");
			 $('#img_kiosk_banner_spot').attr('src', '/frontend/img/optmark-chk.png');
		 }else
		 {
			 $('input[name=kiosk_product_type]').val("off");
			 $('#img_kiosk_banner_spot').attr('src', '/frontend/img/optmark.png');
         
		 }
         $.get($("#products_search").attr("action"), $("#products_search").serialize(), null, "script");
         return false;
	 });

	 $("#electric_spot").click(function () {
		 if ($('input[name=electric_product_type]').val() != "on")
		 {
			 $('input[name=electric_product_type]').val("on");
			 $('#img_electric_spot').attr('src', '/frontend/img/optmark-chk.png');
		 }else
		 {
			 $('input[name=electric_product_type]').val("off");
			 $('#img_electric_spot').attr('src', '/frontend/img/optmark.png');
         
		 }
         $.get($("#products_search").attr("action"), $("#products_search").serialize(), null, "script");
         return false;
	 });
	 
	 
   });
   </script>